<%- include ("../templates/encabezado") %>
<%- include ("../templates/menu") %>
<div class="container pt-4">
  <h3 class="text-center mb-4">Explora las noticias recientes</h3>
  <div class="boxcard">
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% negocios.forEach((negocio) => { %>
        <div class="col">
          <div class="card h-100 w-75 mx-auto shadow" style="border-radius: 25px;">
            <img src="/Negocios/images/<%= negocio.foto %>" class="card-img-top" alt="..." style="width: 100%; height: 200px; object-fit: cover; border-top-left-radius: 25px; border-top-right-radius: 25px;">
            <div class="card-body text-center">
              <p hidden><%=negocio.id%></p>
              <h5 class="card-title"><%= negocio.nombre %></h5>
              <p class="card-text">
                <strong>Ubicaci√≥n:</strong> <%= negocio.ubi %><br>
              </p>
              <a href="/negocio/<%= user.id %>/<%= negocio.id%>" class="btn btn-outline-info">Ver</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</div>

